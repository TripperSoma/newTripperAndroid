<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rankhep.com.tripper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".util.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SetMakeScheduleActivity" />
        <activity android:name=".activity.AccountRegisterActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.SetTasteActivity" />
        <activity android:name=".activity.TouristInfoActivity" />
        <activity android:name=".activity.ReviewViewerActivity" />
        <activity android:name=".activity.CalenderActivity" />
        <activity android:name=".activity.AddCompleteActivity" />
        <activity android:name=".activity.ProfileSettingActivity" />
        <activity android:name=".activity.PlaceSearchActivity" />
        <activity android:name=".activity.ReviewEditActivity" />
        <activity android:name=".activity.HotelInfoActivity"></activity>
    </application>

</manifest>